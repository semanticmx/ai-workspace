{
  "description": "Global MCP servers available to all projects",
  "mcpServers": {
    "workspace": {
      "description": "Access to AI workspace for planning and documentation",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ALLOWED_DIRECTORIES": "${HOME}/ai-workspace",
        "READONLY": "false"
      }
    },
    "github": {
      "description": "GitHub operations for all projects",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "aws-docs": {
      "description": "AWS documentation reference",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-aws-docs"],
      "env": {}
    },
    "brave": {
      "description": "Brave search for web research and information",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "BRAVE_MCP_TRANSPORT",
        "-e",
        "BRAVE_API_KEY",
        "mcp/brave-search"
      ],
      "env": {
        "BRAVE_MCP_TRANSPORT": "stdio",
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    }
  },
  "globalSettings": {
    "timeout": 30000,
    "retryCount": 3,
    "logLevel": "info"
  }
}